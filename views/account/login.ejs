<h1>
    <%= title %>
</h1>

<!-- Flash Messages (Using Your Existing CSS) -->
<% if (messages.success) { %>
<div class="flash flash--success">
    <p><%= messages.success %></p>
    <p>
        Please
        <a href="/account/login"
           class="primary-btn">Log In</a>
    </p>
</div>
<% } %>

<% if (messages.error) { %>
<div class="flash flash--error">
    <p><%= messages.error %></p>
</div>
<% } %>

<p class="form-note"><span class="required">*</span> All fields are required.</p>

<div class="password-help">
    <p class="password-title">Password Requirements</p>
    <ul class="password-rules">
        <li>12 characters minimum</li>
        <li>At least 1 capital letter</li>
        <li>At least 1 number</li>
        <li>At least 1 special character</li>
    </ul>
</div>

<form class="account-form"
      method="post"
      action="/account/login">

    <label for="account_email">Email (Username)</label>
    <input type="email"
           id="account_email"
           name="account_email"
           required
           value="<%= typeof account_email !== 'undefined' ? account_email : '' %>">

    <label for="account_password">Password</label>
    <div class="password-field">
        <input type="password"
               id="account_password"
               name="account_password"
               required
               pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
               title="Must be at least 12 characters and include 1 uppercase, 1 lowercase, 1 number, and 1 special character.">
        <button type="button"
                class="toggle-password"
                aria-label="Show password"
                aria-pressed="false">ğŸ‘ï¸</button>
    </div>

    <button type="submit"
            class="primary-btn">Login</button>
</form>

<script src="/js/password-toggle.js"></script>

<p class="account-alt">
    No account? <a href="/account/register">Register here</a>
</p>