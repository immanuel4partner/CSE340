<h1>Add New Classification</h1>

<% if (errors) { %>
<ul class="notice">
    <% errors.forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
</ul>
<% } %>

<form action="/inv/add-classification"
      method="post"
      class="classification-form">

    <p class="form-note">
        <span class="required">*</span> Field is required.
    </p>

    <label for="classification_name">
        Classification Name
    </label>

    <p class="classification-rule">
        Name must be alphabetic characters only.
    </p>

    <input type="text"
           name="classification_name"
           id="classification_name"
           required
           pattern="^[A-Za-z]+$">

    <button type="submit"
            class="classification-btn">
        Add Classification
    </button>

</form>